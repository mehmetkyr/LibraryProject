@model UserRoleViewModel

@{
    var role = string.Join(", ", Model.UserRoles);
}

<div class="container">

    <h1> Edit @Model.User.UserName </h1>
    <div style="min-height:60vh">

        @if (false)
        {
            <p style="min-height:60vh">No book was found with this Id</p>
        }
        else
        {
            <form method="post" asp-controller="Member" asp-action="Edit">
                <div class="mt-3">
                    <label class="form-label">Id</label>
                    <input type="text" class="form-control" readonly asp-for="User.Id" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Roles</label>
                    <input type="text" class="form-control" readonly asp-for="@role" />
                </div>
                <label class="form-label mt-3">Roles</label>
                <div class="d-flex">
                    @foreach (var item in Model.AllRoles)
                    {
                        <input type="radio" id="@item.Name" class="form-check-input me-1" asp-for="radioChecked" value="@item.Id"/>
                        <label for="@item.Name" class="form-check-label me-5">@item.Name</label>
                    }
                    <span class="text-danger" asp-validation-for="radioChecked"></span>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary px-3 mb-3">Add / Remove</button>
                </div>
                <span class="text-warning">@ViewBag.Message</span>
            </form>
        }
    </div>
</div>

