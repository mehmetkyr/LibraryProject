@model List<AdminContactViewModel>

<style>
    .wrap{
        min-height: 70vh;
    }

    table{
        width: 100%;
    }

    .message{
        word-break: break-word; 
        white-space: normal; 
    }
</style>

<div class="container">
    <h1 class="text-center mb-5" > MESSAGES </h1>
    <div class="wrap" style="background-color:#f2f2f2;">
        @if(Model.Count == 0)
        {
            <p>The message box is empty.</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Title</th>
                        <th>Message</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Title</td>
                            <td class="message">@item.Message</td>
                            <td><a type="submit" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }       
                </tbody>
            </table>
        }
    </div>
</div>